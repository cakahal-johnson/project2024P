<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_dashboard"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/textViewDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Dashboard"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/buttonReportNewCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report New Case"
        android:layout_below="@id/textViewDashboardTitle"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewReportedCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reported Cases:"
        android:textSize="18sp"
        android:layout_below="@id/buttonReportNewCase"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/listViewCases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewReportedCases"
        android:layout_marginTop="10dp"/>

</RelativeLayout>