<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_cakahal_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/black"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/add_ic_icon" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ann2"
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="floating.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tx"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="powered by Cakahal Johnson 2022"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/tx"
            android:layout_width="match_parent"
            android:layout_below="@id/ann2"
            android:layout_height="80dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="stepBar.json"
            app:lottie_loop="true" />


</RelativeLayout>