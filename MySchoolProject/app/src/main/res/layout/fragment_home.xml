<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@drawable/round_iq_color15"
        android:src="@drawable/iquiz"

        />

    <Button
        android:id="@+id/startExamBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgHome"
        android:text="welcome Take Your Quiz"
        android:textColor="#ffffff"
        android:background="@drawable/round_back_green20"
        android:layout_margin="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/startExamBtn"
        android:background="#ccc"
        android:orientation="vertical"
        >

        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent"-->


        <!--                    android:text="@string/help"
-->


        <TextView
            android:id="@+id/atomicNumberDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="18sp" />
    </ScrollView>

</RelativeLayout>